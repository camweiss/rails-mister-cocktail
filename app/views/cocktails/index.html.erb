<div class='body-img'>
  <div class='container'>
    <h1 class='text-center' id='index-title'>The Red Door</h1>
    <div class='container'>
      <div class='row'>
        <% @cocktails.each do |cocktail| %>
        <div class='col-xs-12 col-sm-4'>
          <div class='card'>
            <div class='card-description'>
              <h2><%= cocktail.name %></h2>
              <ul style="list-style: none;">
              <li class="list"><%= link_to 'Show', cocktail %></li>
              <li class="list"><%= link_to 'Edit', edit_cocktail_path(cocktail) %></li>
              <li class="list"><%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></li>
              </ul>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

